<div class="container p-3 text-white">
    <%= link_to "↩", dreams_path, class: "btn button_one" %>

  <div class="row mt-4">
    <p>Label 1</p>
    <p>Label 2</p>
  </div>

<div class="container dream_container opacity-box p-3">
  <h3><%= @dream.date %></h3>
  <% if @dream.content %>
    <p><%= @dream.content %></p>
  <% else %>
    <p>No content for this dream 🤷🏽‍♀️</p>
  <% end %>

  <p>
    <%= link_to dream_path(@dream), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-link" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>

    <%# some space between the icons %>
    <span style="margin: 0 5px;"></span>

  <%= link_to edit_dream_path(@dream), class: "card-link" do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>
  </p>
</div>
</div>
