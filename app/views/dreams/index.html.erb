<div class="container">
  <div class="wrap">
    <div class="box">
      <%= form_tag dreams_path, method: :get, class: "search" do %>
        <div class="d-flex justify-content-between align-items-center">
          <%= text_field_tag :search, params[:search], class: "input", placeholder: " Search", onmouseout: "this.value = ''; this.blur();" do %>
          <i class="fas fa-filter"></i>
          <% end %>
          <i class="fas fa-filter"></i>
        </div>
        <% end %>
    </div>
  </div>

  <div>
    <%# Button to go to labels %>
    <%= link_to "Labels", labels_path %>
  </div>


  <div class="cards-container">
    <% @dreams.each do |dream| %>
      <%=link_to dream_path(dream) do %>
        <div class="opacity-box">
          <div class="date-container-index-cards">
            <h5><%= content_tag(:strong, dream.date.strftime('%d.%B.%Y')) %></h5>
          </div>
          <div class="textarea-container form-control-index transparent-textarea">
              <%= dream.content.truncate(60)%>
          </div>
        </div>
      <% end %>
    <% end %>
   </div>
  </div>
</div>
