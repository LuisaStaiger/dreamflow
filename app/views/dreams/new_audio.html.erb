<div class="container p-3 text-white" data-controller="audio-input">
  <%= link_to "â†©", root_path, class: "btn button_one text-white" %>

    <div class="container m-4 opacity-box">
      <h2>Record your dreams ğŸ™ï¸</h2>
        <%= form_with url: new_audio_dreams_path, local: true, multipart: true, method: :post do |form| %>
          <%= form.file_field :audio, data: { audio_input_target: "input" } %>
          <%= form.submit "Upload and Transcribe", class: "btn button_one" %>
        <% end %>

        <textarea
          class="transcribed-text"
          style="width: 100%; height: 100px;"
          id="transcribedText"
          data-audio-input-target="transcribedText"
          placeholder="Your transcribed text will appear here...">
        </textarea>


        <div class="d-flex justify-content-end">
          <%= link_to root_path, class: "btn button_one violet button--mic",
            data: {
              action: "click->audio-input#toggleRecording",
              audio_input_target: "recordButton" } do %>
          <i class="fa fa-microphone record-icon"></i>
          <% end %>
        </div> 

    </div>

    <div class="d-flex justify-content-end">
      <%= link_to 'Create dream ğŸ’­', dreams_path, class: "btn button_one",
      data: {
        action: "click->audio-input#submitReviewedText",
        audio_input_target: "submitButton"} %>
    </div>
  </div>
</div>
