<div class="container p-3 text-white">
  <%= link_to "↩", root_path, class: "btn button_one text-white" %>

  <div class="new_container p-1">
    <h4><%="#{Date.today.strftime('%A, %B %d, %Y')}"%></h4>
      <%= simple_form_for(@dream) do |f| %>
        <div class="input_container">
          <%= f.input :content, input_html: { class: 'form-control', style: 'height: 250px;' }, label: "My dream", placeholder: "Describe your dream... Did you soar high above the clouds or discover a hidden underwater city? Let your imagination run wild!" %>
        </div>
        <div class="buttons-container">
        <%= f.submit "✔", class: "btn button_one" %>
      </div>
      <% end %>
  </div>
</div>
